extends ../templates/layout

block content
    link(rel="stylesheet", href="/css/style.css")
  
    h1 Agregar Venta

    form(action='/venta-add', method='post')

      label(for='venta') Fecha Venta:
        input(type='date', id='fecha_venta', name='fecha_venta', required=true)
      br

      label(for='precio') Precio total: 
        input(type='number', id='precio', name='precio', required=true)
      br

      button(type='submit') Agregar Venta
    br
    a(href='/venta') Volver a la Lista de ventas