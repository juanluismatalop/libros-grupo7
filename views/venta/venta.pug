extends ../templates/layout

block content
    h1 Lista de Ventas 
    table 
        thead 
            tr 
                th Id Venta 
                th Fecha de Venta
                th Total 
        tbody 
            each venta in venta 
                tr 
                    td= venta.id_venta 
                    td= venta.fecha_venta
                    td= venta.total 
                    td 
                        a(href=`/venta-delete/${libro.id_libro}`) Eliminar venta
    p 
        a(href='/venta-add') Agregar nueva venta